#include <iostream>
#include <math.h>

using namespace std;

int T;

int main()
{
    cin>>T;

    long long int x, y, dis, maxdis;
    for(int testcase=0;testcase<T;testcase++){
        cin>>x>>y;
        dis=y-x;
        int i=0;
        maxdis=0;
        while(1){
            maxdis+=i;
            if(maxdis>=dis){
                cout<<i*2-1<<endl;
                break;
            }
            maxdis+=i;
            if(maxdis>=dis){
                cout<<i*2<<endl;
                break;
            }
            i++;
        }
    }

}
